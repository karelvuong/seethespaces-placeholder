<!doctype html>
<html lang="en-US" prefix="og: http://ogp.me/ns#">
  <%= partial "_partials/head" %>

  <body class="<%= page_classes %>">
    <%= partial "_partials/header/space" %>

    <%= partial "_partials/blocks/space-hero" %>

    <%= partial "_partials/header/space-nav" %>

    <%= yield %>

    <% if current_page.data.related %>
    <div class="pad--md--y bg-lightgrey">
      <div class="container text--center">
        <header class="section-header">
          <h1><%= current_page.data.title %> is also home to...</h1>
        </header>

        <div class="section-body section-body--comfy">
          <% current_page.data.related.each do |space| %>
          <a class="block-related-item btn-<%= space.accent %> text--center" href="<%= space.url %>">
            <%= space.name %>
          </a>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>

    <section class="block-subscribe bg-black pad--md--y text--center">
      <div class="container">
        <div class="col-sm-8 col-sm-offset-2">
          <h1 class="block-hero-title clr-white pad--sm--b">Like this space?</h1>

          <section class="subsection section--sm section">
            <p class="block-hero-subtitle clr-white pad--xxxs--b">Share it with your friends.</p>

            <a class="btn-facebook--blue btn" href="#">Facebook</a>
            <a class="btn-linkedin--blue btn" href="#">LinkedIn</a>
            <a class="btn-twitter--blue btn" href="#">Twitter</a>
          </section>

          <section class="subsection section--sm section">
            <p class="block-hero-subtitle clr-white pad--xxxs--b">Request a tour to check it out yourself.</p>
            <a class="btn-<%= current_page.data.accent %> btn" href="#">Request tour</a>
          </section>


          <section class="subsection section--sm section">
            <p class="block-hero-subtitle clr-white">Subscribe to our mailing list to be<br class="hidden-xs"> the first to know when more spaces are added.</p>

            <form class="block-hero-form" action="//karel.us5.list-manage.com/subscribe/post?u=453afd4574efb15909950c60d&amp;id=f4ab8eace7" method="POST">
              <div class="block-hero-form-input-group">
                <input class="block-hero-form-input" type="email" name="email" value="" placeholder="email.address@domain.com">
                <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_453afd4574efb15909950c60d_f4ab8eace7" tabindex="-1" value=""></div>
                <input class="block-hero-form-btn btn-grey btn" type="submit" name="name" value="Subscribe">
              </div>
            </form>
          </section>
        </div>
      </div>
    </section>

    <%= partial "_partials/footer/main" %>
    <%= partial "_partials/scripts" %>
  </body>
</html>
